@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <fieldset>
        <legend>用户登录</legend>
        <span>用户名：</span>@Html.TextBox("name")
        <span>密码：</span>@Html.Password("password")
        <br />
        <input type="submit" value="登录" />
    </fieldset>
}